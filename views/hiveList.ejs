<!DOCTYPE html>
<html>
<head>
    <title>Hive list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <%- include('partial/header')%>

    <div class="container-fluid text-center">
        <form method="post">
            <div class="input-group mb-4">
                <select class="form-select" name="status">
                    <option value="Все">Все</option>
                    <option value="Завершено!">Завершенные</option>
                    <option value="В процессе!">В процессе</option>
                    <option value="Время вышло!">Время вышло</option>
                    <option value="Бессрочно!">Бессрочно</option>
                </select>
                <button class="btn btn-secondary" type="submit" formaction="/filter">Фильтровать</button>
                <button class="btn btn-success" type="submit" formaction="/new">Добавить</button>
            </div>
        </form>

        <div class="m-1 row row-cols-6 border border-warning border-3">
            <% hives.forEach(function(hive){ %>
                <%- include('partial/hive', {hive: hive}); %>
            <% }); %>
        </div>
    </div>

</body>
</html>